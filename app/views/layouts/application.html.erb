<html>
<head>
  <title>MySample</title>

  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js'></script>

  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <%= csrf_meta_tags %>

</head>
<body data-spy='scroll' data-target='.navbar'>
	<nav class='nav navbar navbar-inverse navbar-fixed-top' role='navigation'>
		<div class='container-fluid'>
			<div class='navbar-header'>
        <button type='button' class='navbar-toggle' data-toggle='collapse' data-target='.navbar-collapse'>
          <span class='sr-only'>Toggle navigation</span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
        </button>
        <div>
            
            <a class="navbar-brand" href="/static_pages/index">SI E-Shop</a>
           
        </div>
      </div> <!-- env nav header-->

     

      <div class='navbar-collapse collapse'>
      	<ul class='nav navbar-nav navbar-right'>
          <li class="navbar-form">
            <%= form_tag("/products", method: "get") do %>
            <%= text_field_tag(:q) %>
           <%= image_submit_tag("search_icon.png", class: "img_responsive", size: "5")%>
            <% end %>
          </li>
          <li><a href='/static_pages/landing_page'>Home</a></li>
          <li><a href='/static_pages/about'>About</a></li>
          <li><a href='/static_pages/contact'>Contact</a></li>
          <li> 
            <a href='/products' >Products</a>
   				</li>
   			</ul>
        <ul class="nav pull-right navbar-nav">
          <li>
            <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
            <% else %>
            <%= link_to('Login', new_user_session_path) %>
            <% end %>
          </li>
        </ul>

     	</div>
    </div> <!-- end nav container-->
  </nav>
  
    <%#= flash[:notice] %>
    <div class='pos'>
      <% if notice %>
        <p id="notice" class="alert alert-danger" role='alert'><%= notice %></p>
      <% end %>
    </div>
    <div class='pos'> 
      <% if alert %>
        <p id="alert" class="alert alert-warning" role='alert'><%= alert %></p>
      <% end %>
    </div>

    
    <%= yield %>

  

	<footer class='footer_position'>
		&copy; Ruby Training, 2016 
	</footer>

</body>
</html>
